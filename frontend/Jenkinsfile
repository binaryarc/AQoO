pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "frontend-app:latest"
        CONTAINER_NAME = "frontend"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'frontend',
                    url: 'https://lab.ssafy.com/s12-webmobile1-sub1/S12P11E203.git',
                    credentialsId: 'frontend-cred'
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh """
                    docker run --rm -v $(pwd)/aqoo-fe:/app -w /app node:18-alpine sh -c "
                    npm install && npm run build && npm test"
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t ${DOCKER_IMAGE} ./frontend
                """
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying container with name: ${CONTAINER_NAME}"
                    sh """
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    docker run -d --name ${CONTAINER_NAME} --network host \
                    -p 3000:3000 ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
