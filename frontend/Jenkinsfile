pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "frontend-app:latest"
        CONTAINER_NAME = "frontend"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'frontend',
                    url: 'https://lab.ssafy.com/s12-webmobile1-sub1/S12P11E203.git',
                    credentialsId: 'frontend-cred'
            }
        }

        stage('Build and Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    label 'my-docker-agent'
                }
            }
            steps {
                dir('aqoo-fe') { // frontend 디렉토리 안에서 실행
                    sh 'npm install'
                    sh 'npm run build'
                    sh 'npm test' // 테스트가 필요한 경우 추가
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('frontend') { // 도커파일이 있는 경로
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying container with name: ${CONTAINER_NAME}"
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"
                    sh """
                        docker run -d --name ${CONTAINER_NAME} --network host \
                        -p 3000:3000 ${DOCKER_IMAGE}
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}